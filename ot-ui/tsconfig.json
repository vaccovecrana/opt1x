{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["dom", "ES2020"],
    "moduleResolution": "Node",
    "jsx": "react",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "react": ["node_modules/preact/compat"]
    }
  },
  "exclude": ["./build"]
}
